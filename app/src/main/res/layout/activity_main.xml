<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:screenOrientation= "portrait" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/workit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Work\nit"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/makeit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Make\nit"
                android:textSize="12sp" />

            <Button
                android:id="@+id/doit"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Do\nit"
                android:textSize="12sp" />

            <Button
                android:id="@+id/makesus"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Makes\nus"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/harder"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Harder"
                android:textSize="12sp" />

            <Button
                android:id="@+id/better"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Better"
                android:textSize="12sp" />

            <Button
                android:id="@+id/faster"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Faster"
                android:textSize="12sp" />

            <Button
                android:id="@+id/stronger"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Stronger"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/morethan"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="More\nthan"
                android:textSize="12sp" />

            <Button
                android:id="@+id/hour"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Hour"
                android:textSize="12sp" />

            <Button
                android:id="@+id/our"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Our"
                android:textSize="12sp" />

            <Button
                android:id="@+id/never"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Never"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/ever"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Ever"
                android:textSize="12sp" />

            <Button
                android:id="@+id/after"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="After"
                android:textSize="12sp" />

            <Button
                android:id="@+id/workis"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Work\nis"
                android:textSize="10sp" />

            <Button
                android:id="@+id/over"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Over"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:textOn="TONE: HIGH"
    	android:textOff="TONE: LOW"
        android:text="ToggleButton" />

    <Button
        android:id="@+id/play"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/toggleButton1"
        android:text="Play" />

    <Button
        android:id="@+id/pause"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/play"
        android:layout_toLeftOf="@+id/toggleButton1"
        android:text="Pause" />

    <Button
        android:id="@+id/stop"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/play"
        android:layout_toRightOf="@+id/toggleButton1"
        android:text="Stop" />

</RelativeLayout>